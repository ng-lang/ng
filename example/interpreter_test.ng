fun sum(n) {
  val s = 0;
  loop i = 0 {
    s = s + i;
    if (i < n) {
      next i + 1;
    }
  }
  return s;
}

fun sum2(i: int, n: int) {
  if (i == 0) {
    return n;
  }
  next i-1, n+i;
}

fun sum3(i, n) {
  if (i == 0) {
    return n;
  }
  return sum3(i - 1, n + i);
}

val result = sum2(3206, 0);

print(result);